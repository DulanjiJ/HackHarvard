<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hackharvard.transit.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="47dp"
        android:id="@+id/editText2"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Material.Notification.Info"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        android:phoneNumber="true"
        android:contentDescription="Strarting Point"
        android:hint="Starting Point"
        android:allowUndo="true"/>


    <TextView
        android:layout_height="wrap_content"
        android:text="TRANSIT"
        android:layout_width="wrap_content"
        android:paddingLeft="115dp"
        android:textSize="24sp"
        android:fontFamily="sans-serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:textAppearance="@android:style/TextAppearance.Material.Notification.Info"
        android:layout_below="@+id/editText2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:typeface="normal"
        android:contentDescription="Ending Point"
        android:hint="Ending Point"
        android:imeOptions="actionDone"/>

    <Button
        android:text="Go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/button3"
        android:fontFamily="sans-serif"
        android:typeface="normal"
        style="@style/Widget.AppCompat.Button"
        android:visibility="visible"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
